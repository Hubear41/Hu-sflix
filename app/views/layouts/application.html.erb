<!DOCTYPE html>
<html>
  <head>
    <title>Husflix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/525e69fa68.js"></script>
    
    <script type="text/javascript">
      window.logoURL = "<%= image_url('husflix_logo_v1.png') %>"
      window.githubLogoURL = "<%= image_url('GitHub-Mark-Light-32px.png') %>"
      window.linkedInLogoURL = "<%= image_url('linkedIn-symbol.png') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
